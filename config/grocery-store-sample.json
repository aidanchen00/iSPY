{
  "$schema": "./grocery-store-schema.json",
  "id": "grocery-store-downtown",
  "name": "Downtown Grocery Mart",
  "address": "123 Main Street, City, State 12345",
  "timezone": "America/Los_Angeles",
  
  "detectionMode": "retail_theft",
  "deploymentMode": "cloud",
  
  "cameras": [
    {
      "id": "cam-entrance",
      "name": "Main Entrance",
      "storeId": "grocery-store-downtown",
      "location": "Front door, ceiling mounted",
      "enabled": true,
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "zones": [
        {
          "id": "entrance-zone",
          "name": "Main Entrance",
          "type": "entrance",
          "polygon": [
            { "x": 0.0, "y": 0.0 },
            { "x": 0.3, "y": 0.0 },
            { "x": 0.3, "y": 0.5 },
            { "x": 0.0, "y": 0.5 }
          ],
          "color": "#3B82F6",
          "riskMultiplier": 1.3,
          "enabled": true,
          "description": "Primary store entrance"
        },
        {
          "id": "exit-zone",
          "name": "Main Exit",
          "type": "exit",
          "polygon": [
            { "x": 0.7, "y": 0.0 },
            { "x": 1.0, "y": 0.0 },
            { "x": 1.0, "y": 0.5 },
            { "x": 0.7, "y": 0.5 }
          ],
          "color": "#EF4444",
          "riskMultiplier": 1.5,
          "enabled": true,
          "description": "Store exit - critical for walkout detection"
        }
      ]
    },
    {
      "id": "cam-checkout",
      "name": "Checkout Area",
      "storeId": "grocery-store-downtown",
      "location": "Above checkout lanes",
      "enabled": true,
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "zones": [
        {
          "id": "checkout-lanes",
          "name": "Checkout Lanes 1-4",
          "type": "checkout",
          "polygon": [
            { "x": 0.1, "y": 0.2 },
            { "x": 0.9, "y": 0.2 },
            { "x": 0.9, "y": 0.8 },
            { "x": 0.1, "y": 0.8 }
          ],
          "color": "#22C55E",
          "riskMultiplier": 1.2,
          "enabled": true,
          "description": "All checkout lanes and self-checkout"
        },
        {
          "id": "self-checkout",
          "name": "Self-Checkout Kiosks",
          "type": "checkout",
          "polygon": [
            { "x": 0.6, "y": 0.3 },
            { "x": 0.85, "y": 0.3 },
            { "x": 0.85, "y": 0.7 },
            { "x": 0.6, "y": 0.7 }
          ],
          "color": "#10B981",
          "riskMultiplier": 1.4,
          "enabled": true,
          "description": "Self-checkout area - higher fraud risk"
        }
      ]
    },
    {
      "id": "cam-cosmetics",
      "name": "Cosmetics & Health",
      "storeId": "grocery-store-downtown",
      "location": "Aisle 3, ceiling",
      "enabled": true,
      "resolution": {
        "width": 1280,
        "height": 720
      },
      "zones": [
        {
          "id": "cosmetics-aisle",
          "name": "Cosmetics Aisle",
          "type": "high_theft",
          "polygon": [
            { "x": 0.0, "y": 0.1 },
            { "x": 0.5, "y": 0.1 },
            { "x": 0.5, "y": 0.9 },
            { "x": 0.0, "y": 0.9 }
          ],
          "color": "#F59E0B",
          "riskMultiplier": 1.8,
          "enabled": true,
          "description": "High-value cosmetics and skincare"
        },
        {
          "id": "health-section",
          "name": "Health & Pharmacy",
          "type": "high_theft",
          "polygon": [
            { "x": 0.5, "y": 0.1 },
            { "x": 1.0, "y": 0.1 },
            { "x": 1.0, "y": 0.9 },
            { "x": 0.5, "y": 0.9 }
          ],
          "color": "#F59E0B",
          "riskMultiplier": 1.6,
          "enabled": true,
          "description": "OTC medications and health products"
        }
      ]
    },
    {
      "id": "cam-electronics",
      "name": "Electronics Section",
      "storeId": "grocery-store-downtown",
      "location": "Electronics department corner",
      "enabled": true,
      "resolution": {
        "width": 1920,
        "height": 1080
      },
      "zones": [
        {
          "id": "electronics-display",
          "name": "Electronics Display",
          "type": "high_theft",
          "polygon": [
            { "x": 0.1, "y": 0.1 },
            { "x": 0.9, "y": 0.1 },
            { "x": 0.9, "y": 0.7 },
            { "x": 0.1, "y": 0.7 }
          ],
          "color": "#EF4444",
          "riskMultiplier": 2.0,
          "enabled": true,
          "description": "Highest value electronics - priority monitoring"
        }
      ]
    },
    {
      "id": "cam-alcohol",
      "name": "Wine & Spirits",
      "storeId": "grocery-store-downtown",
      "location": "Alcohol section",
      "enabled": true,
      "resolution": {
        "width": 1280,
        "height": 720
      },
      "zones": [
        {
          "id": "alcohol-section",
          "name": "Wine & Spirits",
          "type": "high_theft",
          "polygon": [
            { "x": 0.0, "y": 0.0 },
            { "x": 1.0, "y": 0.0 },
            { "x": 1.0, "y": 1.0 },
            { "x": 0.0, "y": 1.0 }
          ],
          "color": "#F59E0B",
          "riskMultiplier": 1.7,
          "enabled": true,
          "description": "Alcoholic beverages - age-restricted"
        }
      ]
    },
    {
      "id": "cam-backroom",
      "name": "Staff Backroom",
      "storeId": "grocery-store-downtown",
      "location": "Backroom entrance",
      "enabled": true,
      "resolution": {
        "width": 1280,
        "height": 720
      },
      "zones": [
        {
          "id": "staff-entrance",
          "name": "Staff Only Entrance",
          "type": "staff_only",
          "polygon": [
            { "x": 0.2, "y": 0.2 },
            { "x": 0.8, "y": 0.2 },
            { "x": 0.8, "y": 0.8 },
            { "x": 0.2, "y": 0.8 }
          ],
          "color": "#8B5CF6",
          "riskMultiplier": 2.5,
          "enabled": true,
          "description": "Restricted access - employees only"
        }
      ]
    }
  ],
  
  "thresholds": {
    "logOnly": 30,
    "dashboardMark": 50,
    "alertSecurity": 75,
    "critical": 90
  },
  
  "behaviorWeights": {
    "grab_and_run": 85,
    "cart_walkout": 80,
    "employee_theft": 75,
    "concealment": 70,
    "checkout_bypass": 65,
    "tag_removal": 65,
    "distraction_theft": 60,
    "ticket_switching": 55,
    "self_checkout_fraud": 55,
    "fitting_room_theft": 50,
    "receipt_fraud": 50,
    "suspicious_loitering": 40,
    "unknown": 35
  },
  
  "calibration": {
    "sensitivityLevel": 50,
    "zoneMultipliers": {
      "electronics-display": 1.2,
      "self-checkout": 1.3
    },
    "ignoredPatterns": [
      {
        "id": "blue-vest",
        "name": "Store Employees (Blue Vest)",
        "type": "uniform",
        "description": "Ignore alerts for people wearing blue store vests",
        "enabled": true,
        "config": {
          "colors": ["#2563eb", "#1e40af"]
        }
      },
      {
        "id": "morning-restock",
        "name": "Morning Restocking",
        "type": "schedule",
        "description": "Reduced sensitivity during morning restocking",
        "enabled": true,
        "config": {
          "schedules": ["06:00-08:00"]
        }
      },
      {
        "id": "night-cleanup",
        "name": "Night Cleanup Crew",
        "type": "schedule",
        "description": "Reduced sensitivity during cleaning hours",
        "enabled": true,
        "config": {
          "schedules": ["22:00-23:30"]
        }
      }
    ],
    "activeHours": {
      "start": "06:00",
      "end": "23:00"
    },
    "peakHours": [
      {
        "start": "17:00",
        "end": "19:00",
        "multiplier": 1.2
      },
      {
        "start": "11:00",
        "end": "13:00",
        "multiplier": 1.1
      }
    ]
  },
  
  "privacy": {
    "blurFaces": true,
    "blurInStoredMedia": true,
    "retentionDays": 30,
    "excludeFromTraining": false
  },
  
  "alertConfig": {
    "email": {
      "enabled": true,
      "recipients": ["security@grocery-downtown.com", "manager@grocery-downtown.com"],
      "minSeverity": "medium"
    },
    "sms": {
      "enabled": false,
      "phoneNumbers": [],
      "minSeverity": "high"
    },
    "phone": {
      "enabled": false,
      "phoneNumber": "",
      "minSeverity": "critical"
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "minSeverity": "medium"
    }
  }
}
